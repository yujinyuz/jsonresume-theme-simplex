{{#if resume.work.length}}
	{{#each resume.work}}
		<section class="position">
			{{#if @first}}
				<h2>Work Experiences</h2>
			{{/if}}
			<h3>
				{{#if url}}
					<a target="_blank" rel="noopener" href="{{url}}">{{name}}</a>
				{{else}}
					{{name}}
				{{/if}}
			</h3>

			{{#if position}}
				{{> position}}
			{{/if}}
		</section>
	{{/each}}
{{/if}}
